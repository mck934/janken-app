<body>
  <div class="container">
    <h1>じゃんけん</h1>
    <div class="handContainer">
      <p id="computerResult"></p>
      <img id="computerImage" src="" width="100">
    </div>
    <div class="handContainer">
      <p id="myResult"></p>
      <img id="myImage" src="" width="100">
    </div>
    <p id="judgeResult"></p>
    <button id='gu'>グー</button>
    <button id='tyoki'>チョキ</button>
    <button id='pa'>パー</button>
  </div>
</body>
<script>

  document.addEventListener('DOMContentLoaded', function () {
    // ここに処理を書く
    console.log('DOMの読み込みが完了しました');

    const computerResult = document.querySelector(`#computerResult`);
    const myResult = document.querySelector(`#myResult`);
    const judgeResult = document.querySelector(`#judgeResult`);
    const gu = document.querySelector(`#gu`);
    const tyoki = document.querySelector(`#tyoki`);
    const pa = document.querySelector(`#pa`);
    const hands = [`グー`, `チョキ`, `パー`];
    let myHand = ``;
    let computerHand = ``;

    gu.addEventListener(`click`, function () {
      myHand = hands[0];
      myResult.textContent = `自分：${myHand}`;
      getComputerHand();
      setHandImage(myImage, myHand);
      getJudge(myHand, computerHand);
    });

    tyoki.addEventListener(`click`, function () {
      myHand = hands[1];
      myResult.textContent = `自分：${myHand}`;
      getComputerHand();
      setHandImage(myImage, myHand);
      getJudge(myHand, computerHand);
    });

    pa.addEventListener(`click`, function () {
      myHand = hands[2];
      myResult.textContent = `自分：${myHand}`;
      getComputerHand();
      setHandImage(myImage, myHand);
      getJudge(myHand, computerHand);
    });


    function getComputerHand() {
      const index = Math.floor(Math.random() * hands.length);
      computerHand = hands[index];
      computerResult.textContent = `相手：${computerHand}`;
      setHandImage(computerImage, computerHand);
    };

    function getJudge(myHand, computerHand) {
      if (myHand === computerHand) {
        return judgeResult.textContent = `あいこ`;
      } else if (
        (myHand === "グー" && computerHand === "チョキ") ||
        (myHand === "チョキ" && computerHand === "パー") ||
        (myHand === "パー" && computerHand === "グー")
      ) {
        return judgeResult.textContent = "あなたの勝ち！";
      } else {
        return judgeResult.textContent = "あなたの負け…";
      };

    };

    const computerImage = document.querySelector(`#computerImage`);
    const myImage = document.querySelector(`#myImage`);

    function setHandImage(imageElement, hand) {
      if (hand === `グー`) {
        imageElement.src = `./gu.webp`;
      } else if (hand === `チョキ`) {
        imageElement.src = `./tyoki.webp`;
      } else if (hand === `パー`) {
        imageElement.src = `./pa.webp`;
      }
    };

  });
</script>

</html>
