    }

    h1 {
      color: #333366;
      margin-bottom: 20px;
    }

    p {
      font-size: 1.2em;
      margin: 10px 0;
    }

    #judgeResult {
      font-weight: bold;
      font-size: 1.3em;
      padding: 10px;
      border-radius: 5px;
    }

    button {
      font-size: 1.1em;
      padding: 10px 20px;
